{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc && npm run doc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint:fix": "eslint --fix src/**/*.ts",
    "test": "jest --env node",
    "prettier-format": "prettier --config .prettierrc src/**/*.ts --write",
    "start:dev:server": "nodemon lib/server.js --env dev",
    "compile:tsc:watch": "yarn run tsc -w",
    "db:start": "mongod --port 27017 --dbpath /var/lib/mongodb/parcel-delivery",
    "compile:tsc": "yarn run tsc ",
    "start:dev:watch": "yarn compile:tsc && yarn lint:fix &&  yarn run concurrently \"yarn start:dev:server\" \"yarn compile:tsc:watch\" \"yarn prettier-watch\" ",
    "doc": "apidoc -i src/doc/ -o api-doc/ --template ./doc-template",
    "doc:watch": "nodemon --watch lib/doc --exec yarn doc"
  },
  "engines": {
    "node": "14"
  },
